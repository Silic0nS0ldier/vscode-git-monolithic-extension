filegroup(
    name = 'pnpm_config',
    srcs = [
        'package.json',
    ],
    visibility = ['//third_party/pnpm:node_modules'],
)

genrule(
    name = 'node_modules',
    deps = ['//third_party/pnpm:node_modules'],
    outs = ['node_modules'],
    output_is_complete = False,
    cmd = 'ln -s "../../third_party/pnpm/$PKG_DIR/node_modules" ./node_modules',
)
